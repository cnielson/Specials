@using Telerik.Web.Mvc.UI;

@model List<Specials.UI.Models.SpecialVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Place.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DayOfWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AverageReviewScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Tags.First().Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfWeek)
            </td>
            <td>
                @if (item.AverageReviewScore >= 0)
                {
                    @Html.DisplayFor(modelItem => item.AverageReviewScore)  <text>(</text>@Html.DisplayFor(modelItem => item.TotalReviews) <text>Reviews)</text>
                }
                else
                {
                    <text>N/A</text>
                }
            </td>
            <td>
                @{
                var str = "";
                foreach (var tag in item.Tags)
                {
                    str += tag.Name + ", ";
                }
                str = str.Substring(0, str.Length - 2);
                <text>@str</text>
                }
            </td>
            <td>
                
                @Html.ActionLink("Edit", "Edit", new { id = item.SpecialId }) |
                @Html.ActionLink("Details", "Details", new { id = item.SpecialId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SpecialId })
            </td>

        </tr>
    }
    
</table>
